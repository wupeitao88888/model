<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.ledoing.activity.LCWelcome">

    <com.modelsdk.slideshowview.SlideShowView
        android:id="@+id/slideshowView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lc_first"
            android:layout_width="20dp"
            android:layout_height="5dp"
            android:src="@drawable/shallow" />

        <ImageView
            android:id="@+id/lc_two"
            android:layout_width="20dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/shallow" />

        <ImageView
            android:id="@+id/lc_three"
            android:layout_width="20dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/shallow" />

        <ImageView
            android:id="@+id/lc_four"
            android:layout_width="20dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/shallow" />


    </LinearLayout>


    <TextView
        android:id="@+id/lc_title_original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/original"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/lc_title_interaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/interaction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/lc_title_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/team"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:textSize="35dp" />

</RelativeLayout>